name: Bitcoin Trading Bot

on:
  schedule:
    - cron: '*/30 * * * *'  # كل 30 دقيقة
  workflow_dispatch:  # للتشغيل اليدوي

jobs:
  run-bot:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Python
      uses: actions/setup-python@v2
      with:
        python-version: '3.8'

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pandas numpy ccxt talib-binary scikit-learn requests

    - name: Run bot and send message
      env:
        BOT_TOKEN: ${{ secrets.8447527648:AAH8tGSND0HXHjYOhnDIbGsqRUiit7unyOs }}
        CHAT_ID: ${{ secrets.8439126917 }}
      run: |
        output=$(python bitcoin_bot.py)
        curl -s -X POST "https://api.telegram.org/bot$8447527648:AAH8tGSND0HXHjYOhnDIbGsqRUiit7unyOs/sendMessage" \
          -d chat_id="$8439126917" \
          -d text="$output" \
          -d parse_mode=HTML
